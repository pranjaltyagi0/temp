SELECT
    e.first_name,
    e.last_name,
    j.max_salary AS "first job sal"
FROM employees e
JOIN (
    SELECT jh.employee_id, jh.job_id
    FROM job_history jh
    WHERE jh.start_date = (
        SELECT MIN(start_date)
        FROM job_history
        WHERE employee_id = jh.employee_id
    )
) first_job ON e.employee_id = first_job.employee_id
JOIN jobs j ON first_job.job_id = j.job_id
ORDER BY e.first_name ASC;
